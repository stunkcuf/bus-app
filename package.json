{
  "name": "fleet-management-system",
  "version": "1.0.0",
  "description": "Frontend build tools for Fleet Management System",
  "scripts": {
    "build": "NODE_ENV=production webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "dev": "npm run build:dev && npm run watch",
    "clean": "rimraf dist/*",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "simple:build": "npm run simple:concat && npm run simple:minify",
    "simple:concat": "concat-cli -f static/*.css -o dist/app.css && concat-cli -f static/*.js -o dist/app.js",
    "simple:minify": "cleancss -o dist/app.min.css dist/app.css && terser dist/app.js -o dist/app.min.js --compress --mangle"
  },
  "watch": {
    "build": {
      "patterns": ["static/**/*"],
      "extensions": "js,css",
      "quiet": false,
      "delay": 1000
    }
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/plugin-transform-runtime": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "babel-loader": "^9.1.3",
    "clean-css-cli": "^5.6.3",
    "concat-cli": "^4.0.0",
    "core-js": "^3.35.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "cssnano": "^6.0.2",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.4",
    "postcss-preset-env": "^9.3.0",
    "rimraf": "^5.0.5",
    "terser": "^5.26.0",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [
    "fleet-management",
    "school-bus",
    "build-tools"
  ],
  "author": "Fleet Management System",
  "license": "ISC"
}