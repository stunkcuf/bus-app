# Fleet Management System - Environment Variables Template
# Copy this file to .env and customize for your environment
# Do not commit .env files to version control

#==============================================================================
# APPLICATION CONFIGURATION
#==============================================================================

# Application environment (development | production)
APP_ENV=development

# HTTP server port (default: 5000)
PORT=5000

# Logging level (DEBUG | INFO | WARN | ERROR | FATAL)
LOG_LEVEL=INFO

#==============================================================================
# DATABASE CONFIGURATION
#==============================================================================

# Primary database connection string (preferred method)
# Railway provides DATABASE_URL automatically
DATABASE_URL=postgresql://postgres:password@localhost:5432/fleet_management

# Alternative: Individual PostgreSQL settings (used if DATABASE_URL not set)
# PGHOST=localhost
# PGPORT=5432
# PGUSER=postgres
# PGPASSWORD=password
# PGDATABASE=fleet_management

#==============================================================================
# SECURITY CONFIGURATION
#==============================================================================

# Admin user credentials (REQUIRED IN PRODUCTION)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD_123

# Session encryption key (REQUIRED IN PRODUCTION)
# Generate with: openssl rand -hex 32
SESSION_SECRET=CHANGE_ME_RANDOM_256_BIT_SECRET_KEY

# Session storage file (optional)
SESSION_STORE_FILE=sessions.json

#==============================================================================
# PERFORMANCE & FEATURES
#==============================================================================

# Disable HTTP compression (true | false)
# Set to true if using nginx or CDN compression
DISABLE_COMPRESSION=false

#==============================================================================
# DEVELOPMENT SETTINGS
#==============================================================================

# Frontend build environment (development | production)
NODE_ENV=development

#==============================================================================
# PRODUCTION EXAMPLE
#==============================================================================

# For production deployment, use values like:
# APP_ENV=production
# DATABASE_URL=postgresql://user:pass@host:port/db?sslmode=require
# ADMIN_PASSWORD=StrongSecurePassword123!
# SESSION_SECRET=cryptographically-secure-random-key-256-bits-long
# LOG_LEVEL=INFO
# DISABLE_COMPRESSION=true