# Fleet Management System - Environment Variables Template
# Copy this file to .env and customize for your environment
# Do not commit .env files to version control

#==============================================================================
# APPLICATION CONFIGURATION
#==============================================================================

# Application environment (development | production)
APP_ENV=development

# HTTP server port (default: 5000)
PORT=5000

# Logging level (DEBUG | INFO | WARN | ERROR | FATAL)
LOG_LEVEL=INFO

#==============================================================================
# DATABASE CONFIGURATION
#==============================================================================

# Primary database connection string (preferred method)
# Railway provides DATABASE_URL automatically
DATABASE_URL=postgresql://postgres:password@localhost:5432/fleet_management

# Alternative: Individual PostgreSQL settings (used if DATABASE_URL not set)
# PGHOST=localhost
# PGPORT=5432
# PGUSER=postgres
# PGPASSWORD=password
# PGDATABASE=fleet_management

#==============================================================================
# SECURITY CONFIGURATION
#==============================================================================

# Admin user credentials (REQUIRED IN PRODUCTION)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD_123

# Session encryption key (REQUIRED IN PRODUCTION)
# Generate with: openssl rand -hex 32
SESSION_SECRET=CHANGE_ME_RANDOM_256_BIT_SECRET_KEY

# Session storage file (optional)
SESSION_STORE_FILE=sessions.json

#==============================================================================
# NEW FEATURES CONFIGURATION
#==============================================================================

# Email Configuration (for Notification System)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_ADDRESS=fleet-notifications@yourdomain.com
SMTP_FROM_NAME=Fleet Management System

# SMS Configuration (Optional - for SMS notifications)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=+1234567890

# GPS Tracking Configuration
GPS_UPDATE_INTERVAL=30              # seconds between location updates
GPS_HISTORY_RETENTION_DAYS=30       # days to keep GPS history
GPS_ACCURACY_THRESHOLD=50           # meters - ignore updates with worse accuracy

# WebSocket Configuration (for Real-time Dashboard)
WEBSOCKET_PORT=8081
WEBSOCKET_PING_INTERVAL=30          # seconds
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:8080,https://yourdomain.com

# Mobile API Configuration
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
JWT_EXPIRATION=24h                  # token expiration time
API_RATE_LIMIT=100                  # requests per window
API_RATE_WINDOW=60                  # window in seconds

# Database Connection Pool Tuning
DB_MAX_OPEN_CONNS=25               # maximum open connections
DB_MAX_IDLE_CONNS=5                # maximum idle connections
DB_CONN_MAX_LIFETIME=5m            # maximum connection lifetime
DB_CONN_MAX_IDLE_TIME=10m          # maximum idle time
DB_HEALTH_CHECK_INTERVAL=30s       # health check interval

# Feature Flags (Optional)
ENABLE_GPS_TRACKING=true
ENABLE_NOTIFICATIONS=true
ENABLE_MOBILE_API=true
ENABLE_REALTIME_DASHBOARD=true
ENABLE_BUDGET_MANAGEMENT=true

#==============================================================================
# PERFORMANCE & FEATURES
#==============================================================================

# Disable HTTP compression (true | false)
# Set to true if using nginx or CDN compression
DISABLE_COMPRESSION=false

#==============================================================================
# DEVELOPMENT SETTINGS
#==============================================================================

# Frontend build environment (development | production)
NODE_ENV=development

#==============================================================================
# PRODUCTION EXAMPLE
#==============================================================================

# For production deployment, use values like:
# APP_ENV=production
# DATABASE_URL=postgresql://user:pass@host:port/db?sslmode=require
# ADMIN_PASSWORD=StrongSecurePassword123!
# SESSION_SECRET=cryptographically-secure-random-key-256-bits-long
# LOG_LEVEL=INFO
# DISABLE_COMPRESSION=true